Register Inhabitant -> select(SC01, SC02)

RI && Password -> select(SC03)

RI && FngerPrint -> select(SC04)

defineTheHomeState -> select (SC05)

definePoliciesForHomeState -> select (SC06)

defineRightsForInhabitant -> select (SC07)

requestAccessToHome && Password -> select (SC08, SC09)

requestAccessToHome && fingerPrint -> select (SC10, SC11)

guestRequestAcces -> select (SC12, SC13)

accessToSpecificEnvironments -> select (SC14, SC15)

Intrusion Detection -> select (SC16, 18)

Lock Bedroom -> select (SC19)

Turn the Lights on-off -> select (SC20)

presenceDetection -> select(SC21)

fireDetection -> select(SC22)

fireSystem -> select (SC23)


secondsToClose -> bindParameter (SECONDS_TO_CLOSE)

homeState -> bindParameter (HOME_STATE)

attermptsToBlock -> bindParameter(ATTEMPTS_TO_BLOCK)