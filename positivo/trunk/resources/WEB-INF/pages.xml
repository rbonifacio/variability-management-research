<?xml version="1.0" encoding="UTF-8"?>
<pages login-view-id="/usuario/novoUsuario.xhtml"
	no-conversation-view-id="/home.xhtml" xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">
	<page view-id="*">
		<navigation>
			<rule if="#{not identity.loggedIn}" if-outcome="home">
				<redirect view-id="/home.xhtml" />
			</rule>
			<rule if="#{identity.loggedIn}" if-outcome="home">
				<redirect view-id="/usuario/sumario.xhtml" />
			</rule>
			<rule if="#{not identity.loggedIn}" if-outcome="cancelar">
				<redirect view-id="/home.xhtml" />
			</rule>
			<rule if="#{identity.loggedIn}" if-outcome="cancelar">
				<redirect view-id="/usuario/sumario.xhtml" />
			</rule>
			<rule if-outcome="novoUsuario">
				<redirect view-id="/usuario/novoUsuario.xhtml" />
			</rule>
			<rule if-outcome="sumario">
				<redirect view-id="/usuario/sumario.xhtml" />
			</rule>
			<rule if-outcome="recuperarSenha">
				<redirect view-id="/usuario/recuperarSenha.xhtml" />
			</rule>
		</navigation>
	</page>
	<page action="#{propostaAction.recuperaPropostasUsuario()}"
		login-required="true" view-id="/usuario/sumario.xhtml">
		<end-conversation before-redirect="true" />
		<navigation>
			<rule if-outcome="novaProposta">
				<redirect view-id="/proposta/novaProposta.xhtml" />
			</rule>
			<rule if-outcome="atualizarDados">
				<redirect view-id="/usuario/atualizarDados.xhtml" />
			</rule>
			<rule if-outcome="alterarSenha">
				<redirect view-id="/usuario/alterarSenha.xhtml" />
			</rule>
			<rule if-outcome="editarProposta">
				<redirect view-id="/proposta/editarProposta.xhtml" />
			</rule>
		</navigation>
	</page>
	<page action="#{propostaAction.recuperaPropostasUsuario()}"
		login-required="true" view-id="/proposta/minhaProposta.xhtml">
		<end-conversation before-redirect="true" />
		<navigation>
			<rule if-outcome="editarProposta">
				<redirect view-id="/proposta/editarProposta.xhtml" />
			</rule>
		</navigation>
	</page>
	<page login-required="true" view-id="/proposta/novaProposta.xhtml">
		<begin-conversation flush-mode="manual" join="true" />
		<navigation>
			<rule if-outcome="minhaProposta">
				<redirect view-id="/proposta/minhaProposta.xhtml" />
			</rule>
		</navigation>
	</page>
	<page login-required="true" view-id="/proposta/editarProposta.xhtml">
		<begin-conversation flush-mode="manual" join="true" />
		<navigation>
			<rule if-outcome="minhaProposta">
				<redirect view-id="/proposta/minhaProposta.xhtml" />
			</rule>
		</navigation>
	</page>
	<page login-required="true" view-id="/usuario/atualizarDados.xhtml">
		<begin-conversation flush-mode="manual" join="true" />
	</page>
	<page login-required="true" view-id="/proposta/editarProposta.xhtml">
		<begin-conversation flush-mode="manual" join="true" />
	</page>
	<page login-required="true" view-id="/usuario/alterarSenha.xhtml">
		<begin-conversation flush-mode="manual" join="true" />
	</page>
	<page view-id="/usuario/novoUsuario.xhtml">
		<end-conversation before-redirect="true" />
		<navigation>
			<rule if-outcome="home">
				<redirect view-id="/home.xhtml" />
			</rule>
		</navigation>
	</page>
	<page view-id="/usuario/confirmaSolicitacaoCadastro.xhtml">
		<end-conversation before-redirect="true" />
	</page>
	<page view-id="/home.xhtml">
		<end-conversation before-redirect="true" />
	</page>
	<exception class="org.jboss.seam.framework.EntityNotFoundException">
		<redirect view-id="/error.xhtml">
			<message severity="warn">Record not found</message>
		</redirect>
	</exception>
	<exception class="javax.persistence.EntityNotFoundException">
		<redirect view-id="/error.xhtml">
			<message severity="warn">Record not found</message>
		</redirect>
	</exception>
	<exception class="javax.persistence.EntityExistsException">
		<redirect view-id="/error.xhtml">
			<message severity="warn">Duplicate record</message>
		</redirect>
	</exception>
	<exception class="javax.persistence.OptimisticLockException">
		<end-conversation />
		<redirect view-id="/error.xhtml">
			<message severity="warn">Another user changed the same data, please try again</message>
		</redirect>
	</exception>
	<exception class="org.jboss.seam.security.AuthorizationException">
		<redirect view-id="/error.xhtml">
			<message severity="error">#{messages['org.jboss.seam.NoPermission']}</message>
		</redirect>
	</exception>
	<exception class="org.jboss.seam.security.NotLoggedInException">
		<redirect view-id="/usuario/novoUsuario.xhtml">
			<message severity="warn">#{messages['org.jboss.seam.NotLoggedIn']}</message>
		</redirect>
	</exception>
	<exception class="javax.faces.application.ViewExpiredException">
		<redirect view-id="/home.xhtml">
			<message severity="warn">#{messages['org.jboss.seam.SessionEnded']}</message>
		</redirect>
	</exception>
	<exception class="org.jboss.seam.ConcurrentRequestTimeoutException"
		log-level="trace">
		<http-error error-code="503" />
	</exception>
	<exception>
		<redirect view-id="/error.xhtml">
			<message severity="error">#{messages['org.jboss.seam.UnexpectedError']}</message>
		</redirect>
	</exception>
</pages>
