<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"

       no-conversation-view-id="/home.xhtml"
       login-view-id="/login.xhtml">

    <page view-id="*">
        <navigation>
            <rule if-outcome="home" if="#{not identity.loggedIn}">
                <redirect view-id="/home.xhtml"/>
            </rule>
            <rule if-outcome="home" if="#{identity.loggedIn}">
                <redirect view-id="/usuario/sumario.xhtml"/>
            </rule>
            <rule if-outcome="novoUsuario">
                <redirect view-id="/usuario/novoUsuario.xhtml"/>
            </rule>
            <rule if-outcome="sumario">
                <redirect view-id="/usuario/sumario.xhtml"/>
            </rule>
            <rule if-outcome="recuperarSenha">
                <redirect view-id="/usuario/recuperarSenha.xhtml"/>
            </rule>
        </navigation>
    </page>
    
    
    <page view-id="/usuario/sumario.xhtml" action="#{propostaAction.recuperaPropostasUsuario()}">
    	<end-conversation before-redirect="true"/>
    	<navigation>
    		<rule if-outcome="novaProposta">
    			<redirect view-id="/proposta/novaProposta.xhtml"/>
    		</rule>
    		<rule if-outcome="atualizarDados">
    			<redirect view-id="/usuario/atualizarDados.xhtml" />
    		</rule>
    		<rule if-outcome="alterarSenha">
    			<redirect view-id="/usuario/alterarSenha.xhtml" />
    		</rule>
    		<rule if-outcome="editarProposta">
    			<redirect view-id="/proposta/editarProposta.xhtml" />
    		</rule>
    	</navigation>
    </page>

	<page view-id="/proposta/novaProposta.xhtml">
		<begin-conversation join="true" flush-mode="manual"/>
	</page>
	
	<page view-id="/proposta/editarProposta.xhtml">
		<begin-conversation join="true" flush-mode="manual"/>
	</page>
	
	<page view-id="/usuario/atualizarDados.xhtml" >
		<begin-conversation join="true" flush-mode="manual" />
	</page>
	
	<page view-id="/proposta/editarProposta.xhtml" >
		<begin-conversation join="true" flush-mode="manual" />
	</page>
	
	<page view-id="/usuario/alterarSenha.xhtml" >
		<begin-conversation join="true" flush-mode="manual" />
	</page>
	
    <page view-id="/usuario/novoUsuario.xhtml">
    	<end-conversation before-redirect="true"/>
    	<navigation> 
    	 	<rule if-outcome="home">
                <redirect view-id="/home.xhtml"/>
          	</rule>
        </navigation>
    </page>
    
    <page view-id="/usuario/confirmaSolicitacaoCadastro.xhtml">
    	<end-conversation before-redirect="true" />
    </page>
    
    <page view-id="/home.xhtml">
    	<end-conversation before-redirect="true" />
    </page>
    
    <exception class="org.jboss.seam.framework.EntityNotFoundException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Record not found</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.EntityNotFoundException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Record not found</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.EntityExistsException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Duplicate record</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.OptimisticLockException">
        <end-conversation/>
        <redirect view-id="/error.xhtml">
            <message severity="warn">Another user changed the same data, please try again</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.security.AuthorizationException">
        <redirect view-id="/error.xhtml">
            <message severity="error">You don't have permission to access this resource</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.security.NotLoggedInException">
        <redirect view-id="/login.xhtml">
            <message severity="warn">#{messages['org.jboss.seam.NotLoggedIn']}</message>
        </redirect>
    </exception>
    
    <exception class="javax.faces.application.ViewExpiredException">
        <redirect view-id="/home.xhtml">
            <message severity="warn">Your session has timed out, please try again</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.ConcurrentRequestTimeoutException" log-level="trace">
      <http-error error-code="503" />
    </exception>
     
    <exception>
        <redirect view-id="/error.xhtml">
            <message severity="error">Unexpected error, please try again</message>
        </redirect>
    </exception>
    
</pages>
